# CI/CD Pipeline Configuration

# Docker registry settings
REGISTRY=docker.io
IMAGE_NAME=kaicyou2532/mathsync
DOCKERFILE_PATH=./Dockerfile

# Build settings
NODE_VERSION=20.19.0
BUILD_PLATFORMS=linux/amd64,linux/arm64

# Deployment settings
KUBERNETES_NAMESPACE=mathsync
DEPLOYMENT_NAME=mathsync-app

# Notification channels
SLACK_CHANNEL=#deployments
SLACK_RELEASE_CHANNEL=#releases

# Security scan settings
TRIVY_SEVERITY=HIGH,CRITICAL
SNYK_SEVERITY_THRESHOLD=medium

# Cache settings
ENABLE_DOCKER_CACHE=true
CACHE_TYPE=gha

# Environment specific overrides
# These can be overridden in workflow files or environment-specific configs
